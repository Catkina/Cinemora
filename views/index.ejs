      <!-- Nội dung bên trái -->
      <div class="PT-banner-content">
          <h3 class="PT-movie-subtitle">Detective Conan Movie 28: One - Eyed Flashback</h3>

          <div class="PT-movie-tags">
              <span class="PT-tag PT-imdb">IMDb 6.8</span>
              <span class="PT-tag">T16</span>
              <span class="PT-tag">2025</span>
              <span class="PT-tag">1h 49m</span>
              
          </div>
          <div class="PT-movie-tags-category">
              <span class="PT-tag-category">Hành Động</span>
              <span class="PT-tag-category">Chiếu Rạp</span>
              <span class="PT-tag-category">Hình Sự</span>
              <span class="PT-tag-category">Anime</span>
              <span class="PT-tag-category">Hoạt hình</span>
