<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trả kết quả tìm kiếm</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">

    <!-- CSS riêng -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header', { user }) %>
    <div class="AT-content">
        <!-- Search Box -->
        <div class="PT-search-wrapper">
            <form class="PT-search-box" method="POST" action="/search">
                <button class="PT-search-btn">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                <input
                    type="text"
                    name="q"
                    placeholder="Tìm kiếm phim, diễn viên"
                    value="<%= q || '' %>"
                    required
                >
                <button class="PT-search-submit" type="submit">Tìm kiếm</button>
            </form>
        </div>

        <div class="PT-movie-sections-bg">
            <div class="PT-movie-sections-inner">
                <!-- Section 1 -->
                <section class="PT-section">
                <h2 class="PT-section-title">
                    Kết quả tìm kiếm "<%= q %>"
                </h2>

                <% if (movies.length === 0) { %>
                    <p style="color:#ccc; padding: 20px">
                        Không tìm thấy phim phù hợp.
                    </p>
                <% } else { %>

                <div class="PT-slider-container">
                    <button class="PT-prev-btn-result">
                        <i class="fa-solid fa-circle-chevron-left"></i>
                    </button>

                    <div class="PT-slider" style="justify-content: left; padding-left: 65px;">
                        <% movies.forEach(movie => { %>
                            <a href="/trang-tt?id=<%= movie.id %>">
                                <div class="PT-card">
                                    <img style="height: 120px"
                                        src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                                        alt="<%= movie.title %>"
                                    >
                                    <div class="PT-card-name">
                                        <%= movie.title %>
                                    </div>
                                </div>
                            </a>
                        <% }) %>
                    </div>

                    <button class="PT-next-btn-result">
                        <i class="fa-solid fa-circle-chevron-right"></i>
                    </button>
                </div>

                <% } %>
            </section>

                <!-- Section 2 -->
                <section class="PT-section">
                    <h2 class="PT-section-title">Nội dung tương tự</h2>
                    <div class="PT-slider-container">
                        <button class="PT-prev-btn-result">
                            <i class="fa-solid fa-circle-chevron-left"></i>
                        </button>
                        <div class="PT-slider">
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.1.webp" alt="Nội dung 1">
                                <div class="PT-card-name">Thanh gươm diệt quỷ</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.2.webp" alt="Nội dung 2">
                                <div class="PT-card-name">Fairy tail</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.3.webp" alt="Nội dung 3">
                                <div class="PT-card-name">One punch man</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.4.webp" alt="Nội dung 3">
                                <div class="PT-card-name">Attack on titan</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.5.webp" alt="Nội dung 3">
                                <div class="PT-card-name">Rồng và công chúa tàn nhang</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 2.6.webp" alt="Nội dung 3">
                                <div class="PT-card-name">SPYxFAMILY</div>
                            </div>
                        </div>
                        <button class="PT-next-btn-result">
                            <i class="fa-solid fa-circle-chevron-right"></i>
                        </button>
                    </div>
                </section>

                <!-- Section 3 -->
                <section class="PT-section">
                    <h2 class="PT-section-title">Đề xuất dựa trên tìm kiếm của bạn</h2>
                    <div class="PT-slider-container">
                        <button class="PT-prev-btn-result">
                            <i class="fa-solid fa-circle-chevron-left"></i>
                        </button>
                        <div class="PT-slider">
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.1.webp" alt="Đề xuất 1">
                                <div class="PT-card-name">Biệt đội cảm tử ở dị giới (Phần 1)</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.2.webp" alt="Đề xuất 2">
                                <div class="PT-card-name">Attack on titan (Phần cuối)</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.3.webp" alt="Đề xuất 3">
                                <div class="PT-card-name">Sợ săn tí hon</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.4.webp" alt="Đề xuất 3">
                                <div class="PT-card-name">Vua bóng chuyền (Phần 2)</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.5.webp" alt="Đề xuất 3">
                                <div class="PT-card-name">One punch man</div>
                            </div>
                            <div class="PT-card">
                                <img src="Images/Home/Trả 3.6.webp" alt="Đề xuất 3">
                                <div class="PT-card-name">Vua bóng chuyền (phần 4)</div>
                            </div>
                        </div>
                        <button class="PT-next-btn-result">
                            <i class="fa-solid fa-circle-chevron-right"></i>
                        </button>
                    </div>
                </section>

            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include('partials/footer') %>
</body>
</html>